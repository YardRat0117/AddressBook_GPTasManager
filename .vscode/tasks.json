{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-I", "${workspaceFolder}/include",  // 包含目录
                "${workspaceFolder}/src/main.cpp",   // 源文件路径
                "-o", "${workspaceFolder}/src/main"   // 输出文件
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/src/main",  // 运行生成的可执行文件
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
